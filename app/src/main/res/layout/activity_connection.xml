<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:visibility="visible"
    android:background="@color/bgGray"
    android:gravity="center"
  >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="25dp">

        <TextView
            android:text="Configuration IP "
            android:textColor="@color/whiteGray"
            android:textSize="25sp" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tvInputIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addresse IP : "
            android:textColor="@color/whiteGray"
            android:textSize="15sp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/InputIP"
            android:layout_width="175dp"
            android:textSize="15sp"
            android:backgroundTint="@color/whiteGray"
            android:text="192.168.1.1"
            android:textColor="@color/whiteGray" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tvInputPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port :"
            android:textColor="@color/whiteGray"
            android:textSize="15sp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/InputPort"
            android:textSize="15sp"
            android:backgroundTint="@color/whiteGray"
            android:text="1220"
            android:inputType="number"
            android:textColor="@color/whiteGray" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="169dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:onClick="connectBtn"
            android:text="Connect"
            android:textAlignment="center" />

    </TableRow>
</TableLayout>