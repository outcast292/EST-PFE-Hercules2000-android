<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hercules2000.controlApp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icn_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ugh"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hercules2000.control.connectionActivity" android:theme="@style/AppTheme.SlidrActivityTheme"></activity>
        <activity android:name=".HomeMenu" >
        </activity>
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controlApp"
            android:theme="@style/AppTheme.SlidrActivityTheme" >
        </activity>
    </application>

</manifest>